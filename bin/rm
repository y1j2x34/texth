const fs = require('fs-extra');
const path = require('path');

const paths = process.argv.slice(2);

paths
    .map(pth => path.resolve(process.cwd(), pth))
    .filter(pth => fs.existsSync(pth))
    .forEach(pth => {
        fs.removeSync(pth);
        console.info('removed file or directory: ', pth);
});
